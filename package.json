{
  "name": "video-autoscale-demo",
  "version": "1.0.0",
  "description": "Video autoscale demo application with HPA support",
  "main": "dist/server.js",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 nodemon --watch src --ext ts,js,json --exec node --loader ts-node/esm ./src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "clean": "rm -rf dist",
    "load:quick": "artillery run load-testing/artillery-simple.yml",
    "load:full": "artillery run load-testing/artillery-config.yml",
    "load:local": "artillery run -e local load-testing/artillery-simple.yml",
    "load:k8s": "artillery run -e kubernetes load-testing/artillery-simple.yml",
    "load:docker": "artillery run -e docker load-testing/artillery-simple.yml",
    "load:custom": "node load-testing/load-tester.js",
    "load:custom:k8s": "TARGET_URL=http://localhost:30080 node load-testing/load-tester.js",
    "load:hpa": "artillery run load-testing/hpa-test.yml",
    "load:moderate": "artillery run -e kubernetes load-testing/artillery-moderate.yml",
    "monitor:k8s": "./load-testing/monitor-availability.sh http://localhost:30080 5",
    "monitor:users": "./load-testing/user-stats.sh http://localhost:30080 3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "prom-client": "^15.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "artillery": "^2.0.24",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "video",
    "streaming",
    "hls",
    "kubernetes",
    "autoscaling",
    "express"
  ],
  "author": "Raghvendra Awasthi",
  "license": "ISC"
}
